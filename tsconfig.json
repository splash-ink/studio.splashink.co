{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@studio/blog": ["app/blog/index.ts"],
      "@studio/core": ["app/core/index.ts"],
      "@environments/*": ["environments/*"],
      "@studio/gallery": ["app/gallery/index.ts"],
      "@studio/pricing": ["app/pricing/index.ts"],
      "@shared/*": ["app/shared/*"]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
  }
}
